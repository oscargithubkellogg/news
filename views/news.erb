<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News and weather</title>
  </head>

  <body>

    <div class="container">
        <div class="row">
            <div class="col text-left">
            <hr class="my-4">
            <h1>Weather and news webpage </h1>
            </div>
        </div>
    </div>

    
    <div class="container mt-5">
      <h2> In Evanston, it is currently <%= @current_temperature %> and <%= @current_weather_descr %>  </h2>
    </div>

    <div class="row">
        <div class="col text-center">
            <hr class="my-4">
            <h2>Weather forcast for today and the next 6 days <i class="fas fa-cloud-sun-rain"></i></h2>
        </div>
    </div>
    <div class="container mt-5">
        <table class="table">
        <thead>
            <tr>
            <th scope="col">Day</th>
            <th scope="col">Temperature (min)</th>
            <th scope="col">Temperature (max)</th>
            <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
        <% for day in @forecast["daily"].slice(0, 7) %>
            <tr>
            <td><%= Time.at(day["dt"]).strftime("%a") %> </td>
            <td><%= day["temp"]["min"] %></td>
            <td><%= day["temp"]["max"] %></td>
            <td><%= day["weather"][0]["description"] %></td>
            </tr>
        <% end %>
            </tbody>
        </table>
    </div>







    <div class="container">
        <div class="row">
            <div class="col text-center">
                <hr class="my-4">
                <h2>12 most recent news headlines <i class="far fa-newspaper"></i></h2>
            </div>
        </div>
        <div class="row mt-4">
            <% for instance in @news["articles"].slice(0, 12) %>
            <div class="col-sm-4 text-center">
                <p><%= instance["title"] %> </p>
                <a href="<%= instance["url"] %>" class="btn btn-info">Full article</a>
            </div>
            <% end %>
        </div>
    </div>
 
 
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>